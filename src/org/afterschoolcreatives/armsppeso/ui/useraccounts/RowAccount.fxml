   <children>
      <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../res/drawable/icons8-name-tag-100.png" />
         </image>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </ImageView>
      <VBox alignment="CENTER_LEFT" prefWidth="300.0">
         <children>
            <Label fx:id="lbl_full_name" text="JOEMAR DE LA CRUZ" textFill="#565657">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label fx:id="lbl_position" text="ADMINISTRATOR" textFill="#767677" />
         </children>
         <padding>
            <Insets right="20.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER_LEFT">
         <children>
            <Label fx:id="lbl_date" text="10/31/2017 03:57" textFill="#767677">
